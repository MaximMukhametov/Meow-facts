pipeline {
    agent {
        docker { image 'python:3.8.5-slim' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'sudo python -m pip install -r server/requirements.txt --user'
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest'
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}