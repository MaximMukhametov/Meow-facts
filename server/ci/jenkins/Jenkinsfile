pipeline {
    agent {
        docker { image 'python:3.7-slim' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'python -V'
                sh 'ls -la'
                sh 'pwd'
                sh 'cd server/'
                sh 'ls -la'
                sh 'pwd'
                sh 'pip install -r server/requirements.txt --user'
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest'
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}