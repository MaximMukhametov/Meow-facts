pipeline {
    agent {
    dockerfile {
        filename 'Dockerfile.jenkins'
        dir 'server/ci/jenkins'
    }
}
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest'
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}